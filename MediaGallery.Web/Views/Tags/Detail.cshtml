@model MediaGallery.Web.ViewModels.TagDetailViewModel
@using System.Linq
@{
    ViewData["Title"] = $"Tag Â· {Model.Tag}";

    string? MediaUrl(string? path)
    {
        if (string.IsNullOrWhiteSpace(path))
        {
            return null;
        }

        var normalized = path.Replace("\\", "/").TrimStart('/');
        return Url.Content($"~/media/{normalized}");
    }

    var pagination = Model.Pagination;
}

<section class="page-header">
    <span class="page-header__eyebrow">Tag detail</span>
    <h1>@ViewData["Title"]</h1>
    <p class="lead">Photos aligned to the <strong>@Model.Tag</strong> tag. Use the pagination controls or jump into the slideshow.</p>
</section>

<section class="tag-detail" data-tag-view="detail" data-tag="@Model.Tag" data-media-root="@Url.Content("~/media/")">
    @if (!Model.Photos.Any())
    {
        <div class="empty-state">
            <p>No media was found for this tag.</p>
        </div>
    }
    else
    {
        <div class="media-carousel" data-gallery data-carousel aria-label="Media for @Model.Tag">
            <button class="media-carousel__control media-carousel__control--prev" type="button" data-carousel-prev aria-label="Previous tagged photo">
                <span aria-hidden="true">&#10094;</span>
            </button>
            <div class="media-carousel__viewport" data-carousel-viewport tabindex="0">
                <div class="media-carousel__track" data-carousel-track>
                    @foreach (var photo in Model.Photos)
                    {
                        var mediaPath = MediaUrl(photo.FilePath);
                        var topTag = photo.Tags.FirstOrDefault();
                        <article class="media-card" data-has-media="true">
                            <header class="media-card__header">
                                <p class="media-card__title">
                                    @if (photo.UserId.HasValue)
                                    {
                                        <a class="media-card__user-link" asp-controller="Users" asp-action="Profile" asp-route-id="@photo.UserId.Value">
                                            @photo.DisplayName
                                        </a>
                                    }
                                    else
                                    {
                                        @photo.DisplayName
                                    }
                                </p>
                                <span class="media-card__meta">@photo.AddedOn.ToLocalTime().ToString("g")</span>
                            </header>
                            <div class="media-card__body">
                                @if (mediaPath is not null)
                                {
                                    <div class="media-card__media" data-lg-item>
                                        <a href="@mediaPath" data-sub-html="<p>@(photo.MessageText ?? string.Empty)</p>">
                                            <img src="@mediaPath" alt="Photo tagged @Model.Tag">
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(photo.MessageText))
                                {
                                    <p class="media-card__text">@photo.MessageText</p>
                                }
                                <div class="media-card__tags">
                                    <span>@Model.Tag</span>
                                    @if (topTag is not null)
                                    {
                                        <span>Score @topTag.Score.ToString("P1")</span>
                                    }
                                </div>
                                <div class="media-card__actions">
                                    <a class="btn btn-outline btn-sm" asp-controller="Messages" asp-action="MediaChronology" asp-route-photoId="@photo.PhotoId">
                                        <span aria-hidden="true">ðŸ•‘</span>
                                        <span>View chronology</span>
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </div>
            <button class="media-carousel__control media-carousel__control--next" type="button" data-carousel-next aria-label="Next tagged photo">
                <span aria-hidden="true">&#10095;</span>
            </button>
        </div>
    }

    <div class="scroll-status">Page @pagination.PageNumber of tag results.</div>

    <nav class="pagination" aria-label="Tag detail pagination">
        <span class="pagination__info">Page @pagination.PageNumber</span>
        <div class="pagination__actions">
            @if (pagination.HasPreviousPage)
            {
                <a class="btn btn-outline" asp-controller="Tags" asp-action="Detail" asp-route-tag="@Model.Tag" asp-route-page="@(pagination.PageNumber - 1)" asp-route-pageSize="@pagination.PageSize">Previous</a>
            }
            else
            {
                <button class="btn btn-outline" type="button" disabled>Previous</button>
            }

            @if (pagination.HasNextPage)
            {
                <a class="btn btn-outline" asp-controller="Tags" asp-action="Detail" asp-route-tag="@Model.Tag" asp-route-page="@(pagination.PageNumber + 1)" asp-route-pageSize="@pagination.PageSize">Next</a>
            }
            else
            {
                <button class="btn btn-outline" type="button" disabled>Next</button>
            }
        </div>
    </nav>
</section>

@section Scripts {
    <script type="module" src="~/js/tagGallery.js" asp-append-version="true"></script>
}
